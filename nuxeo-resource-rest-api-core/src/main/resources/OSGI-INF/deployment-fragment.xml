<?xml version="1.0"?>

<fragment version="1">

    <!-- custom filter -->
    <extension target="web#FILTER">
        <filter>
            <display-name>Custom HEADER Filter</display-name>
            <filter-name>CustomHeaderFilter</filter-name>
            <filter-class>
                org.nuxeo.labs.resource.api.core.filter.CustomAPIFilter
            </filter-class>
        </filter>
        <filter-mapping>
            <filter-name>CustomHeaderFilter</filter-name>
            <url-pattern>/api/*</url-pattern>
        </filter-mapping>
    </extension>

</fragment>